# ------------------------
# RuneSeal Environment File
# ------------------------

# PostgreSQL Connection
POSTGRES_USER=runeseal_user
POSTGRES_PASSWORD=runeseal_secure_pass
POSTGRES_DB=runeseal_db

# Vault API
API_PORT=8443
API_HOST=0.0.0.0

# JWT Secret (generate a long random string in real .env)
JWT_SECRET=this_is_dev_only
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Token Key (admin can rotate this via CLI)
X_API_KEY=dev-token-key-for-testing-only

# Logging
LOG_LEVEL=info
